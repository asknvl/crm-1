<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="crm.Views.tabs.TextTabHeader">
	<Grid VerticalAlignment="Stretch" Background="Transparent">
		<Grid.ContextMenu>
			<ContextMenu>
				<MenuItem Command="{Binding closeCmd}" Header="Закрыть" VerticalAlignment="Center" FontSize="12"/>
			</ContextMenu>
		</Grid.ContextMenu>
		<TextBlock Text="{Binding Title}" FontSize="12" VerticalAlignment="Center" Margin="0, 5, 0, 0"/>
	</Grid>
</UserControl>
